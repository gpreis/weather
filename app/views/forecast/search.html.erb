<div class="flex items-center justify-center min-h-[70vh]">
  <div class="bg-white rounded-lg shadow-md p-10 w-full max-w-4xl">
    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to "← Back to Search", root_path, class: "text-blue-600 hover:text-blue-700 font-medium text-sm" %>
    </div>

    <!-- Address Header -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-2"><%= @address %></h2>
      <p class="text-gray-600">5-Day Weather Forecast</p>
    </div>

    <!-- Current Weather -->
    <div class="mb-8 pb-8 border-b border-gray-200">
      <p class="text-gray-600 text-sm mb-3 uppercase tracking-wide">Current Weather</p>
      <div class="flex items-end gap-8 mb-6">
        <%= image_tag @weather.current.condition_icon, alt: @weather.current.condition_text, class: "w-20 h-20" %>
        <h3 class="text-6xl font-light text-gray-800"><%= @weather.current.temp_c %>°</h3>
        <p class="text-xl text-gray-700 pb-2"><%= @weather.current.condition_text %></p>
      </div>

      <div class="flex gap-8">
        <div>
          <p class="text-gray-600 text-sm mb-1">High</p>
          <p class="text-xl font-medium text-gray-800"><%= @weather.current.maxtemp_c %>°</p>
        </div>
        <div>
          <p class="text-gray-600 text-sm mb-1">Low</p>
          <p class="text-xl font-medium text-gray-800"><%= @weather.current.mintemp_c %>°</p>
        </div>
      </div>
    </div>

    <!-- 5-Day Forecast -->
    <div>
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Next 5 Days</h3>

      <div class="grid grid-cols-5 gap-4">
        <% @weather.forecast_days.each do |forecast| %>
          <div class="text-center">
            <p class="font-medium text-gray-800 mb-2 text-sm"><%= forecast.date %></p>
            <%= image_tag forecast.condition_icon, alt: forecast.condition_text, class: "w-20 h-20" %>
            <p class="text-xs text-gray-600 mb-3"><%= forecast.condition_text %></p>

            <div class="flex justify-center gap-2 text-sm">
              <span class="font-semibold text-gray-800"><%= forecast.maxtemp_c %>°</span>
              <span class="text-gray-500"><%= forecast.mintemp_c %>°</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
